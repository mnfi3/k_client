<Window x:Class="Kiosk.control.DialogCartSwipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
		Background="#eeeeee"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        WindowStartupLocation="CenterScreen"
        Title="DialogCartSwipe" Height="1000" Width="500" AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <WebBrowser Grid.Row="0" x:Name="webview" Height="auto" Width="auto" Margin="20"/>
        <Image Grid.Row="1" Source="../img/ic_card_swipe.png" Height="auto" Width="auto" Margin="20"/>
        <TextBlock  Grid.Row="2"  Margin="10" TextWrapping="Wrap"  Height="auto" Width="auto" Foreground="#616161" Text="لطفا کارت خود را در دستگاه کارت خوان بکشید" FontSize="20"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
    </Grid>
</Window>
