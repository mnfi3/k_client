<UserControl x:Class="Kiosk.control.ItemTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
		     xmlns:local="clr-namespace:Kiosk.control"
		     Background="{x:Null}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             FontFamily="/Kiosk;component/fonts/iransans/#IRANSans(FaNum) Medium"
             Height="100" Width="180" Margin="5">
    <Grid>
        <Border CornerRadius="15" Background="#FF307AE6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="txt_table" Foreground="White" TextAlignment="Center" FontSize="30"  VerticalAlignment="Bottom" HorizontalAlignment="Center" />
        </Border>

        <!--<Button   Height="auto" Width="auto" VerticalAlignment="Top" FlowDirection="RightToLeft" Background="{x:Null}"  FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"  BorderBrush="{x:Null}"  Foreground="White" >-->
            <materialDesign:PackIcon   Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" Kind="Food" Width="50" Height="50"/>
        <!--</Button>-->

    </Grid>
</UserControl>
