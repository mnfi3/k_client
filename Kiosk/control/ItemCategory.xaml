<UserControl x:Class="Kiosk.control.ItemCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
		     Background="{x:Null}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d" 
             Height="180"
             
             >
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Image x:Name="img_category" Source="../img/ic_appetizer.jpg" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                
        </Grid>
        
        <Grid Grid.Row="1">
            <TextBlock FontWeight="Bold" x:Name="txt_category" Text="appetizer" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
            
    </Grid>
</UserControl>
