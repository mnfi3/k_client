<UserControl x:Class="Kiosk.control.ItemDessert"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
		     Background="{x:Null}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d" 
              >
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="5" Foreground="#121c1b" FontSize="14" Text="پیاز"  HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center"/>
        <Image Width="auto" Margin="5" Height="auto" Grid.Row="1" Source="../img/ic_onion.png"/>
        <TextBlock Grid.Row="2" Margin="5" Foreground="#121c1b"  FontSize="14" Text="1,200 تومان"  HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
