<Window x:Class="Kiosk.ClickToOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cachedImage="clr-namespace:CachedImage;assembly=CachedImage"
        Title="ClickToOrder"  Top="0" Left="0" ResizeMode="NoResize" Loaded="Window_Loaded"  AllowsTransparency="True" WindowStyle="None" FontFamily="iransans">
    <Grid >
        <cachedImage:Image  RenderOptions.BitmapScalingMode="Fant" Stretch="Fill" x:Name="img_splash" Width="auto" Margin="0" Height="auto" Grid.Row="1" Source="/img/click_to_order.jpg" MouseDown="open_list_restaurant"/>
        <Border BorderBrush="white" BorderThickness="4" VerticalAlignment="center" HorizontalAlignment="Center" MouseDown="open_list_restaurant">
        <TextBlock Text="سفارش دهید" Foreground="white" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="80" Margin="40 20">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" Color="Black" BlurRadius="10" />
            </TextBlock.Effect>
        </TextBlock>
        </Border>
    </Grid>
    
  
    
</Window>
