                        <DataTrigger Binding="{Binding IsCartEmpty}" Value="true">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>-->
            <ListView x:Name="lst_cart" ScrollViewer.HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch"  ScrollViewer.PanningMode="Both">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid VerticalAlignment="Top" HorizontalAlignment="Center" Columns="1"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <!--disable hilight-->
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>

        <Grid Grid.Column="1" Background="#f1f1f1">
            <Grid.RowDefinitions>
                <RowDefinition Height="65"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <materialDesign:PopupBox Grid.Column="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White">
                    <StackPanel Width="150">
                        <Button Click="Button_Click" Content="مدیریت"/>
                        <Separator/>
                        <Button Name="btn_exit" Content="خروج" Click="btn_exit_Click"/>
                    </StackPanel>
                </materialDesign:PopupBox>
                <TextBlock Grid.Column="1" Width="Auto"  Foreground="#444444"  Text="اشتها آور ها" FlowDirection="RightToLeft" Margin="0 20 25 10" FontSize="25"></TextBlock>

            </Grid>
            <ListView Grid.Row="1" Margin="10" HorizontalContentAlignment="Right" HorizontalAlignment="Right" ScrollViewer.PanningMode="Both"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="lst_products" SelectionChanged="lst_products_SelectionChanged"  FontFamily="Vazir" >
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid FlowDirection="RightToLeft" HorizontalAlignment="Right" VerticalAlignment="Top" Columns="3"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>


                <!--disable hilight-->
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <!--disable hilight-->

                <!--anim-->
