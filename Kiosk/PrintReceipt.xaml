<Window x:Class="Kiosk.PrintReceipt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
		Background="{x:Null}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Style="{StaticResource vazir}"
        Foreground="White" ResizeMode="NoResize" WindowState="Maximized"   >
    <Grid Background="white">
        <WindowsFormsHost Width="auto" Height="auto"   VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  >
            <rv:ReportViewer BackColor="White" x:Name="rpt">
            </rv:ReportViewer>
        </WindowsFormsHost>
    </Grid>
</Window>
